<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.overview.OverviewFragment">


    <ImageView
        android:id="@+id/main_imageView"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_prueba"
        tools:src="@tools:sample/avatars" />

    <View
        android:id="@+id/gradient_overlay"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintBottom_toBottomOf="@+id/main_imageView"
        app:layout_constraintEnd_toEndOf="@+id/main_imageView"
        app:layout_constraintStart_toStartOf="@+id/main_imageView"
        app:layout_constraintTop_toTopOf="@+id/main_imageView"
        app:layout_constraintVertical_bias="1.0">

    </View>

    <TextView
        android:id="@+id/tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/main_imageView"
        app:layout_constraintEnd_toEndOf="@+id/gradient_overlay"/>

    <ImageView
        android:id="@+id/imv_commets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"
        app:layout_constraintBottom_toTopOf="@+id/tv_comments"
        app:layout_constraintEnd_toEndOf="@+id/tv_comments"
        app:layout_constraintStart_toStartOf="@+id/tv_comments"
        app:tint="@color/white" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:text="Title"
        android:textSize="22sp"
        android:fontFamily="@font/courgette"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_imageView" />

    <ImageView
        android:id="@+id/imv_sport_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:tint="@color/darkGray" />

    <TextView
        android:id="@+id/tv_sport_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/sports_bar_chip"
        app:layout_constraintBottom_toBottomOf="@+id/imv_sport_bar"
        app:layout_constraintStart_toEndOf="@+id/imv_sport_bar"
        app:layout_constraintTop_toTopOf="@+id/imv_sport_bar" />

    <ImageView
        android:id="@+id/imv_restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_check"
        app:tint="@color/darkGray"
        app:layout_constraintStart_toStartOf="@+id/imv_sport_bar"
        app:layout_constraintTop_toBottomOf="@+id/imv_sport_bar" />

    <TextView
        android:id="@+id/tv_restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/restaurant_chip"
        app:layout_constraintBottom_toBottomOf="@+id/imv_restaurante"
        app:layout_constraintStart_toEndOf="@+id/imv_restaurante"
        app:layout_constraintTop_toTopOf="@+id/imv_restaurante" />

    <ImageView
        android:id="@+id/imv_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:src="@drawable/ic_check"
        app:tint="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sport_bar"
        app:layout_constraintStart_toEndOf="@+id/tv_sport_bar"
        app:layout_constraintTop_toTopOf="@+id/tv_sport_bar" />

    <TextView
        android:id="@+id/tv_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/bar_chip"
        app:layout_constraintBottom_toBottomOf="@+id/imv_bar"
        app:layout_constraintStart_toEndOf="@+id/imv_bar"
        app:layout_constraintTop_toTopOf="@+id/imv_bar" />

    <ImageView
        android:id="@+id/imv_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_check"
        app:tint="@color/darkGray"
        app:layout_constraintStart_toStartOf="@+id/imv_bar"
        app:layout_constraintTop_toBottomOf="@+id/imv_bar" />

    <TextView
        android:id="@+id/tv_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/cafe_chip"
        app:layout_constraintBottom_toBottomOf="@+id/imv_cafe"
        app:layout_constraintStart_toEndOf="@+id/imv_cafe"
        app:layout_constraintTop_toTopOf="@+id/imv_cafe" />

    <ImageView
        android:id="@+id/imv_night_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_check"
        app:tint="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bar"
        app:layout_constraintStart_toEndOf="@+id/tv_bar"
        app:layout_constraintTop_toTopOf="@+id/tv_bar" />

    <TextView
        android:id="@+id/tv_ninght_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/nightclub_chip"
        app:layout_constraintBottom_toBottomOf="@+id/imv_night_club"
        app:layout_constraintStart_toEndOf="@+id/imv_night_club"
        app:layout_constraintTop_toTopOf="@+id/imv_night_club" />

    <ImageView
        android:id="@+id/imv_live_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_check"
        app:tint="@color/darkGray"
        app:layout_constraintStart_toStartOf="@+id/imv_night_club"
        app:layout_constraintTop_toBottomOf="@+id/imv_night_club" />

    <TextView
        android:id="@+id/tv_live_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/live_music_chip"
        app:layout_constraintBottom_toBottomOf="@+id/imv_live_music"
        app:layout_constraintStart_toEndOf="@+id/imv_live_music"
        app:layout_constraintTop_toTopOf="@+id/imv_live_music" />

    <ImageView
        android:id="@+id/imv_park"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:src="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ninght_club"
        app:layout_constraintStart_toEndOf="@+id/tv_ninght_club"
        app:layout_constraintTop_toTopOf="@+id/tv_ninght_club" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/park_chip"
        app:layout_constraintBottom_toBottomOf="@+id/imv_park"
        app:layout_constraintStart_toEndOf="@+id/imv_park"
        app:layout_constraintTop_toTopOf="@+id/imv_park" />

    <ImageView
        android:id="@+id/imv_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@+id/imv_park"
        app:layout_constraintTop_toBottomOf="@+id/imv_park" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/other_chip"
        app:layout_constraintBottom_toBottomOf="@+id/imv_others"
        app:layout_constraintStart_toEndOf="@+id/imv_others"
        app:layout_constraintTop_toTopOf="@+id/imv_others" />

    <ScrollView
        android:id="@+id/sv_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/comment_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:src="@drawable/ic_comment"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:fontFamily="@font/courgette"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        android:text="@string/title_place_description"
        app:layout_constraintStart_toStartOf="@+id/imv_restaurante"
        app:layout_constraintTop_toBottomOf="@+id/tv_restaurante" />


</androidx.constraintlayout.widget.ConstraintLayout>